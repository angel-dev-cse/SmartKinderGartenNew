<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryDark"
    android:padding="15dp"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/smartkindergarten_one"
    android:orientation="vertical"
    android:layout_marginTop="25dp">
    <TextView
        android:id="@+id/textViewSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="25dp"
        android:textColor="@color/md_lime_700"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:fontFamily="cursive"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smart Kindergarten"
        android:textSize="18dp"
        android:textColor="@color/md_amber_800"
        android:gravity="center"
        android:id="@+id/no"
        android:fontFamily="serif"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prograssbarSplash"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"/>

</LinearLayout>


</LinearLayout>