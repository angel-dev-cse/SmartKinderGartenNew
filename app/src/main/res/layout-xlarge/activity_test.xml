<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textViewTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/md_teal_A700"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="13dp"
            android:orientation="vertical"
            android:padding="@dimen/fab_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewTest">

                <Button
                    android:id="@+id/buttonOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundcirclebutton"
                    android:text="Button1"
                    android:textAllCaps="false"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundcirclebuttontwo"
                    android:text="Button2"
                    android:textAllCaps="false"
                    android:textColor="@color/md_green_100"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundcirclebuttonthree"
                    android:text="Button3"
                    android:textAllCaps="false"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/buttonOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/roundcirclebuttonfour"
                    android:text="Button3"
                    android:textAllCaps="false"
                    android:textSize="25dp" />

        </LinearLayout>
        <TextView
            android:id="@+id/textViewnothing"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:text="TextView"
            android:visibility="invisible"/>
</LinearLayout>
