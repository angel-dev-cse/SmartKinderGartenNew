<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.smartkindergarten.smartkindergarten.spinnerAlpha.FullImageDesAcitivity"
    >


    <ImageView
                android:id="@+id/imageViewletterName"
                android:layout_width="100dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/ic_settings_white_24dp"
                android:layout_gravity="center"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewforLetterDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/fab_margin_small"
            android:layout_marginRight="10dp"
            android:layout_weight="4"
            android:text="Text"
            android:textSize="35dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speak"
            android:onClick="TTS"
            android:layout_weight="0.5"/>


    </TableRow>


    <ImageView
            android:id="@+id/imageViewforElement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/alert_dark_frame" />

</LinearLayout>